# =============================================================================
# Coverage.py Configuration
# =============================================================================

[run]
# Source directories
source = .

# Omit these files/directories from coverage
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */virtualenv/*
    */.venv/*
    */site-packages/*
    setup.py
    conftest.py
    */migrations/*
    */node_modules/*
    */.terraform/*
    */htmlcov/*

# Enable branch coverage
branch = True

# Run coverage in parallel
parallel = True

# Data file location
data_file = .coverage

[report]
# Precision for coverage percentage
precision = 2

# Show missing lines
show_missing = True

# Skip files with 100% coverage
skip_covered = False

# Skip empty files
skip_empty = True

# Fail if coverage is below this percentage
fail_under = 80

# Exclude lines from coverage
exclude_lines =
    # Standard pragma
    pragma: no cover

    # Don't complain about missing debug code
    def __repr__
    def __str__

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:

    # Don't complain about abstract methods
    @abstract
    @abstractmethod

    # Don't complain about ellipsis
    \.\.\.

    # Don't complain about pass statements
    pass

[html]
# HTML report directory
directory = htmlcov

# Title for the HTML report
title = AIOps Substrate Coverage Report

[xml]
# XML report output
output = coverage.xml

[json]
# JSON report output
output = coverage.json
show_contexts = True
